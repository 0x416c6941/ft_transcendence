{
  "name": "transend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:server": "tsx watch server/index.ts",
    "start:server": "tsx server/index.ts",
    "dev:client": "tsc -p client --watch",
    "build:client": "tsc -p client",
    "dev:css": "tailwindcss -i ./tailwind.css -o ./client/dist/styles.css --watch",
    "build:css": "tailwindcss -i ./tailwind.css -o ./client/dist/styles.css --minify",
    "dev": "npm-run-all -p dev:server dev:client dev:css",
    "build": "npm-run-all -p build:client build:css"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.2.0",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "autoprefixer": "^10.4.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
